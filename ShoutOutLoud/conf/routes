# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Search routes
GET     /user/:handle              controllers.Search.searchByProfile(handle: String)
GET     /search/:keyword           controllers.Search.searchByKeyword(keyword: String)
GET     /search_page/:keyword      controllers.Search.searchByKeyword(keyword: String, maxId: Long)

# Tweet manager routes
POST    /compose                controllers.TweetManager.compose()
GET     /feed                   controllers.TweetManager.feed()
GET     /feed_page              controllers.TweetManager.feed(maxId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
